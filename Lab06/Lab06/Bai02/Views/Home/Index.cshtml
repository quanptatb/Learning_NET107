@model List<Bai02.Models.ProductModel>

<h2>Product List</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Create</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>
                    <a asp-action="Edit" asp-route-name="@item.Name" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-name="@item.Name" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>