@model ASM_NET107_TB01758.Models.AppUser

@{
    ViewData["Title"] = "Sửa thông tin nhân viên";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Cập nhật nhân viên</h4>
            </div>
            <div class="card-body">
                <form asp-action="EditStaff" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label class="form-label">Tên đăng nhập</label>
                        <input asp-for="Username" class="form-control" readonly disabled />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Họ và tên</label>
                        <input asp-for="FullName" class="form-control" required />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input asp-for="Email" type="email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">Lưu thay đổi</button>
                        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>