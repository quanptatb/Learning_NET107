@{
    ViewData["Title"] = "Báo cáo thống kê";
}

<div class="container mt-4">
    <h2 class="mb-4">Báo cáo doanh thu</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Tổng doanh thu (Đơn hàng đã duyệt)</div>
                <div class="card-body">
                    <h1 class="card-title text-center">
                        @string.Format("{0:N0}", ViewBag.Revenue) VNĐ
                    </h1>
                    <p class="card-text text-center">Doanh thu tính trên các đơn hàng có trạng thái "Đã duyệt".</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-primary">Quay lại quản lý</a>
    </div>
</div>