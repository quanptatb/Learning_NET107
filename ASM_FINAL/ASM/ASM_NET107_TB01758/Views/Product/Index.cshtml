@using System.Data
@model DataTable

@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Quản lý Sản phẩm</h2>
        <a asp-action="Create" class="btn btn-success">+ Thêm mới</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Hình ảnh</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Màu / Size</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow row in Model.Rows)
            {
                <tr>
                    <td>@row["Id"]</td>
                    <td>
                        <img src="~/images/@row["Image"]" alt="" style="width:60px; height:60px; object-fit:cover;" onerror="this.style.display='none'" />
                    </td>
                    <td>@row["Name"]</td>
                    <td class="text-danger fw-bold">@string.Format("{0:N0}", row["Price"])</td>
                    <td>@row["Color"] - @row["Size"]</td>
                    <td>
                        <a href="/Product/Edit/@row["Id"]" class="btn btn-warning btn-sm">Sửa</a>
                        <a href="/Product/Delete/@row["Id"]" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?');">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>