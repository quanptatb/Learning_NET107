@model ASM_NET107_TB01758.Models.Product

@{
    ViewData["Title"] = "Sửa sản phẩm";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h4 class="mb-0">Cập nhật sản phẩm</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tên sản phẩm</label>
                            <input asp-for="Name" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Giá bán</label>
                            <input asp-for="Price" type="number" class="form-control" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Màu sắc</label>
                            <input asp-for="Color" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Kích thước</label>
                            <input asp-for="Size" class="form-control" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Danh mục</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories"></select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Tên file ảnh (ví dụ: iphone.jpg)</label>
                        <input asp-for="Image" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Mô tả chi tiết</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                        <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>