@using System.Data
@model DataTable

<h2>Danh sách sản phẩm</h2>

<form method="get" asp-action="Index" class="mb-4">
    <div class="row">
        <div class="col-md-4"><input type="text" name="search" class="form-control" placeholder="Tên sản phẩm..." /></div>
        <div class="col-md-2"><button type="submit" class="btn btn-primary">Tìm kiếm</button></div>
    </div>
</form>

<div class="row">
    @foreach (DataRow row in Model.Rows)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <img src="~/img/@row["Image"]" class="card-img-top" style="height:200px; object-fit:cover;" alt="No Image">
                <div class="card-body">
                    <h5 class="card-title">@row["Name"]</h5>
                    <p class="card-text text-danger fw-bold">@string.Format("{0:N0}", row["Price"]) đ</p>
                    <p>Màu: @row["Color"] | Size: @row["Size"]</p>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@row["Id"]" class="btn btn-info btn-sm">Xem</a>
                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@row["Id"]" class="btn btn-warning btn-sm">Thêm giỏ</a>
                </div>
            </div>
        </div>
    }
</div>