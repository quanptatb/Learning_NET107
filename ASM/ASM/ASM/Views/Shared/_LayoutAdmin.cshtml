<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Hệ thống Quản lý</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        .sidebar { min-height: 100vh; background-color: #343a40; }
        .sidebar a { color: #fff; text-decoration: none; padding: 15px; display: block; }
        .sidebar a:hover { background-color: #495057; }
    </style>
</head>
<body>
    <div class="d-flex">
        <div class="sidebar col-md-2 d-none d-md-block">
            <h3 class="text-white text-center py-3">Admin Panel</h3>
@*             <a href="/Home/Index"><i class="bi bi-speedometer2"></i> Thống kê</a> *@
            <a href="/Home/Product"><i class="bi bi-box-seam"></i> Quản lý Sản phẩm</a>
            <a href="/Home/Employee"><i class="bi bi-people"></i> Quản lý Nhân viên</a>
            <a href="/Home/Order"><i class="bi bi-receipt"></i> Duyệt đơn hàng</a>
            <a href="/Home/Index" class="text-warning mt-5"><i class="bi bi-box-arrow-left"></i> Về trang chủ</a>
        </div>

        <div class="col-md-10 p-4 bg-light">
            <nav class="navbar navbar-light bg-white shadow-sm mb-4 rounded p-2">
                <span class="navbar-brand mb-0 h1 ps-3">@ViewData["Title"]</span>
                <div class="dropdown pe-3">
                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        Xin chào, Quản lý
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Cập nhật thông tin</a></li>
                        <li><a class="dropdown-item text-danger" href="#">Đăng xuất</a></li>
                    </ul>
                </div>
            </nav>
            @RenderBody()
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>