<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASM_NET107_TB01758</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASM_NET107_TB01758.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">ASM_TB01758</a>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Sản phẩm</a></li>

                            @using Microsoft.AspNetCore.Http
                            @inject IHttpContextAccessor HttpContextAccessor
                            @{
                                var role = HttpContextAccessor.HttpContext.Session.GetString("Role");
                            }

                            @if (role == "0")
                            {
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Admin" asp-action="Index">QL Nhân viên</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Admin" asp-action="Statistics">Thống kê</a></li>
                            }
                            @if (role == "1")
                            {
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Product" asp-action="Index">QL Sản phẩm</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Product" asp-action="ManageOrders">Duyệt đơn</a></li>
                            }
                            <li class="nav-item"><a class="nav-link text-danger" asp-controller="Cart" asp-action="Index">Giỏ hàng</a></li>
                        </ul>
                        <ul class="navbar-nav">
                            @if (string.IsNullOrEmpty(role))
                            {
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Đăng nhập</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Đăng ký</a></li>
                            }
                            else
                            {
                                <li class="nav-item"><span class="nav-link text-dark">Hello @HttpContextAccessor.HttpContext.Session.GetString("FullName")</span></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Thoát</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ASM_NET107_TB01758 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
