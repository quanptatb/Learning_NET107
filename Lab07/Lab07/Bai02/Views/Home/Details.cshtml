@model Bai02.Models.Product
@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="card border-0 mb-3">
                <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name" style="max-height: 400px; object-fit: contain;">
            </div>
            <div class="d-flex gap-2">
                <img src="@Model.ImageUrl" style="width: 60px; height: 60px; border: 1px solid #ddd; padding: 5px; cursor: pointer;">
                <img src="/images/icon_lens.jpg" style="width: 60px; height: 60px; border: 1px solid #ddd; padding: 5px; cursor: pointer;">
            </div>
        </div>

        <div class="col-md-6">
            <h2 class="fw-bold text-uppercase" style="font-size: 1.5rem;">@Model.Name</h2>

            <div class="d-flex align-items-center mb-3">
                <span class="fw-bold fs-4 me-3">$@Model.Price.ToString("#,##0.00")</span>
                <span class="text-warning">
                    <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa-regular fa-star-half-stroke"></i>
                </span>
                <span class="text-muted ms-2 fs-6">9 reviews</span>
            </div>

            <div class="d-grid gap-2 col-md-8 mb-4">
                <button class="btn btn-outline-primary fw-bold py-2" type="button" style="border-radius: 0;">ADD TO CART</button>
                <button class="btn btn-primary fw-bold py-2" type="button" style="border-radius: 0; background-color: #3b71a8; border-color: #3b71a8;">BUY IT NOW</button>
            </div>

            <p class="text-muted small">
                This is a demonstration store. You can purchase products like this from <a href="#" class="text-decoration-none">Leica Store Miami</a>.
            </p>

            <ul class="list-unstyled text-primary">
                <li><a href="#" class="text-decoration-none">S-System Kit</a></li>
                <li><a href="#" class="text-decoration-none">Details</a></li>
                <li><a href="#" class="text-decoration-none">S Specs</a></li>
                <li><a href="#" class="text-decoration-none">Lens Specs</a></li>
            </ul>

            <div class="mt-3 text-secondary" style="font-size: 0.9rem; line-height: 1.6;">
                @Model.Description
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">